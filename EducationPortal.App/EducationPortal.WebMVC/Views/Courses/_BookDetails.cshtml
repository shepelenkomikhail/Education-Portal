@model EducationPortal.WebMVC.Models.BookModel

<div class="card">
    <div class="card-header bg-primary text-white">
        <div class="d-flex align-items-center">
            <i class="fas fa-book me-2"></i>
            <h5 class="mb-0">Book Details</h5>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h4 class="text-primary mb-3">@Model.Title</h4>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Author:</strong>
                    </div>
                    <div class="col-sm-8">
                        @Model.Author
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Format:</strong>
                    </div>
                    <div class="col-sm-8">
                        @Model.Formant
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Pages:</strong>
                    </div>
                    <div class="col-sm-8">
                        @Model.PageAmount pages
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Publication Date:</strong>
                    </div>
                    <div class="col-sm-8">
                        @Model.PublicationDate.ToString("MMMM dd, yyyy")
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-book fa-5x text-primary mb-3"></i>
                    <div class="bg-light p-3 rounded">
                        <h6 class="text-muted mb-2">Reading Time Estimate</h6>
                        <p class="mb-0">
                            @{
                                var readingTime = Model.PageAmount * 2; // 2 minutes per page estimate
                                var hours = readingTime / 60;
                                var minutes = readingTime % 60;
                            }
                            @if (hours > 0)
                            {
                                <span>@hours hours @minutes minutes</span>
                            }
                            else
                            {
                                <span>@minutes minutes</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong>About this book:</strong> This @Model.Formant book by @Model.Author contains @Model.PageAmount pages of educational content.
                </div>
            </div>
        </div>
    </div>
</div>
