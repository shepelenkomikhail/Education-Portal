@model IEnumerable<WebMVC.Models.CourseModel>

@{
    ViewData["Title"] = "Courses";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">Courses</h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Course
                </a>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@course.Name</h5>
                            <p class="card-text text-muted flex-grow-1">
                                @if (!string.IsNullOrEmpty(course.Description))
                                {
                                    @(course.Description.Length > 150 ? course.Description.Substring(0, 150) + "..." : course.Description)
                                }
                                else
                                {
                                    <em>No description available</em>
                                }
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm flex-fill">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-info btn-sm flex-fill">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-sm" 
                                            onclick="confirmDelete(@course.Id, '@Html.Raw(course.Name.Replace("'", "\\'"))')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-graduation-cap fa-3x text-muted mb-3"></i>
                        <h4 class="text-muted">No courses found</h4>
                        <p class="text-muted">Get started by creating your first course!</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Create First Course
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the course <strong id="courseNameToDelete"></strong>?</p>
                <p class="text-danger"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(courseId, courseName) {
            document.getElementById('courseNameToDelete').textContent = courseName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")/' + courseId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}