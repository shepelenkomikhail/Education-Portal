@model EducationPortal.WebMVC.Models.VideoModel

<div class="card">
    <div class="card-header bg-success text-white">
        <div class="d-flex align-items-center">
            <i class="fas fa-video me-2"></i>
            <h5 class="mb-0">Video Details</h5>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h4 class="text-success mb-3">@Model.Title</h4>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Duration:</strong>
                    </div>
                    <div class="col-sm-8">
                        @{
                            var hours = Model.Duration / 60;
                            var minutes = Model.Duration % 60;
                        }
                        @if (hours > 0)
                        {
                            <span>@hours hours @minutes minutes</span>
                        }
                        else
                        {
                            <span>@minutes minutes</span>
                        }
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-sm-4">
                        <strong>Quality:</strong>
                    </div>
                    <div class="col-sm-8">
                        @Model.Quality
                        @{
                            string qualityBadge = Model.Quality >= 1080 ? "badge bg-success" : 
                                                   Model.Quality >= 720 ? "badge bg-warning" : "badge bg-secondary";
                        }
                        <span class="@qualityBadge ms-2">@Model.Quality</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center">
                    <i class="fas fa-video fa-5x text-success mb-3"></i>
                    <div class="bg-light p-3 rounded">
                        <h6 class="text-muted mb-2">Video Information</h6>
                        <div class="d-flex justify-content-between">
                            <span>Length:</span>
                            <strong>@Model.Duration min</strong>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Quality:</span>
                            <strong>@Model.Quality</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-play-circle me-2"></i>
                    <strong>About this video:</strong> This @Model.Duration-minute video is available in @Model.Quality quality.
                </div>
            </div>
        </div>
    </div>
</div>
